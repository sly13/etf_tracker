# Database Configuration
# Скопируйте этот файл в .env и настройте параметры

# База данных PostgreSQL
DATABASE_URL="postgresql://etf_user:etf_password@localhost:5432/etf_flow_db?schema=public"

# Shadow Database для миграций (используйте ту же базу данных)
SHADOW_DATABASE_URL="postgresql://etf_user:etf_password@localhost:5432/etf_flow_db?schema=public"

# Альтернативные варианты подключения:
# Локальная разработка:
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/etf_flow_db?schema=public"

# С внешним хостингом:
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# Настройки приложения
PORT=3066
NODE_ENV=development

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_PATH=/var/www/etf_tracker_app/backend/etf-flow-firebase.json

# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# ID чата для отправки уведомлений (получите у @userinfobot)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Дополнительные настройки (опционально)
# LOG_LEVEL=info
# CORS_ORIGIN=http://localhost:3000
